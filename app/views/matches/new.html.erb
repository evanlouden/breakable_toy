<h3>
  Create a match
</h3>

<%= form_for(@match) do |f| %>
    <div class="large-4 columns">
      <%= f.label :opponent, 'Opponent' %>
      <%= f.select :villain_id, options_from_collection_for_select(User.all, :id, :username) %>
    </div>
    <div class="large-4 columns">
      <%= f.label :course, 'Course' %>
      <%= f.select :course_id, options_from_collection_for_select(Course.all, :id, :name) %>
    </div>
    <div class="large-4 columns end">
      <%= f.submit "Create Match", class: 'success button'%>
    </div>
<% end %>
