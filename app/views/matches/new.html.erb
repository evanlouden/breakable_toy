<h3>
  Create a match
</h3>

<%= form_for(@match) do |f| %>
    <div class="large-4 columns">
      <%= f.label :opponent, 'Opponent' %>
      <%= f.select :villain_id, options_from_collection_for_select(User.all, :id, :username) %>
    </div>
    <div class="large-4 columns">
      <%= f.label :course, 'Course' %>
      <%= f.select :course_id, options_from_collection_for_select(Course.all, :id, :name) %>
    </div>
    <div class="large-4 columns end">
      <%= f.submit "Create Match", class: 'button'%>
    </div>
<% end %>

<h3>
  Create ghost match
</h3>
<%= form_tag ghost_matches_path, method: :get do %>
    <div class="large-4 columns">
      <%= select_tag(:course_id, options_from_collection_for_select(@courses_available_for_ghost, :id, :name)) %>
    </div>
    <div class="large-4 columns end">
      <%= submit_tag "Create Ghost Match", class: 'button'%>
    </div>
<% end %>
