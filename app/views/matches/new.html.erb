<h3>
  Create a match
</h3>

<%= form_for(@match) do |f| %>
  <div class="row">
    <div class="large-8 columns">
      <%= f.label :opponent, "" %>
      <%= f.text_field :villain %>
    </div>
  </div>
  <div class="row">
    <div class="large-4 columns">
      <%= f.label :course, "Course" %>
      <%= f.collection_select(:course_id, Course.all, :id, :name) %>
    </div>
  </div>
  <div class="row">
    <div class="large-4 columns end">
      <%= f.submit "Create match", class: 'success button'%>
    </div>
  </div>
  <% end %>
