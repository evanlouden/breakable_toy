<div class="top-bar">
  <% if user_signed_in? %>
  <div class="top-bar-left">
    <ul class="menu">
      <li><%= link_to "#{current_user.username}", root_path %></li>
      <li><div class="nav-font">Handicap: <%= current_user.handicap %></div></li>
      <li> <%= link_to 'Sign Out', destroy_user_session_path, method: :delete %> </li>
    </ul>
  </div>
  <div class="top-bar-right">
    <ul class="menu">
      <li> <%= link_to 'Create a match', new_match_path %></li>
      <li><%= link_to 'View Courses', courses_path %></li>
    </ul>
  </div>
  <% else %>
  <div class="top-bar-left">
    <ul class="menu">
      <li><%= link_to 'View Courses', courses_path %></li>
      <li><%= link_to 'Sign In', new_user_session_path %></li>
      <li><%= link_to 'Sign Up', new_user_registration_path %></li>
    </ul>
  </div>
  <% end %>
</div>
