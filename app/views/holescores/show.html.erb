<div class="centered-text <%= @match_class %>" id="match-status">
  <b>  <%= @match_status %> </b>
</div>
<div class="hole-header">
  Hole # <%= @holescore.hole.hole_number %>
</div>
<div class="row match-score-header">
  <div class="small-4 large-4 columns">
    Players
  </div>
  <div class="small-4 large-4 columns">
    <%= current_user.username %>
  </div>
  <div class="small-4 large-4 columns end">
    <%= @opponent_holescore.user.username %>
  </div>
</div>
<div class="row match-score colored">
  <div class="small-4 large-4 columns middle">
    Gross Score:
  </div>
  <div class="small-4 large-4 columns" id="user_gross_score">
    <% if @holescore.gross_score.nil? %>
      -
    <% else %>
      <%= @holescore.gross_score %>
    <% end %>
  </div>
  <div class="small-4 large-4 columns end">
    <% if @opponent_holescore.gross_score.nil? %>

    <% else %>
      <%= @opponent_holescore.gross_score %>
    <% end %>
  </div>
</div>
<div class="row match-score colorless">
  <div class="small-4 large-4 columns">
    Strokes:
  </div>
  <div class="small-4 large-4 columns" id="user_hole_strokes">
    <% if @holescore.strokes > 0 %>
    <%= @holescore.strokes %>
    <% else %>
    -
    <% end %>
  </div>
  <div class="small-4 large-4 columns end">
    <% if @opponent_holescore.strokes > 0 %>
    <%= @opponent_holescore.strokes %>
    <% else %>
    -
    <% end %>
  </div>
</div>
<div class="row match-score colored">
  <div class="small-4 large-4 columns">
    Net Score:
  </div>
  <div class="small-4 large-4 columns">
    <% if @holescore.net_score.nil? %>
    -
    <% else %>
    <%= @holescore.net_score %>
    <% end %>
  </div>
  <div class="small-4 large-4 columns end">
    <% if @opponent_holescore.net_score.nil? %>

    <% else %>
    <%= @opponent_holescore.net_score %>
    <% end %>
  </div>
</div>


<div class="small-12 column score-slider">
  <div class="slider" data-slider data-start="1" data-initial-start="<%= @holescore.hole.par %>" data-end="12">
    <span class="slider-handle"  data-slider-handle role="slider" tabindex="1" aria-controls="holescore_gross_score"></span>
    <span class="slider-fill" data-slider-fill></span>
  </div>
</div>
  <%= form_for [@match, @holescore] do |f| %>
    <div class="small-5 column">
      <%= f.submit "Enter Score", class: 'success button' %>
    </div>
    <div class="small-3 column end">
      <%= f.number_field :gross_score%>
    </div>
  <% end %>
</div>

  <div class="expanded button-group">
    <% unless @previous_hole.nil? %>
        <%= link_to '<< Hole', match_holescore_path(@match, @previous_hole), class: 'button' %>
    <% end %>
      <%= link_to "Home", @match, class: 'button'  %>
    <% unless @next_hole.nil? %>
        <%= link_to 'Hole >>', match_holescore_path(@match, @next_hole), class: 'button'  %>
    <% end# %>
  </div>
